<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Item List</h1>
    <ul id="item-list">
        <% items.forEach(function(item) { %>
            <li><a href="#" class="item-link" data-id="<%= item._id %>"><%= item.name %></a></li>
        <% }) %>
    </ul>

    <div id="item-details"></div> <!-- Placeholder for the item details -->

    <script>
        document.getElementById('item-list').addEventListener('click', function(event) {
            if (event.target.classList.contains('item-link')) {
                event.preventDefault();
                const itemId = event.target.getAttribute('data-id');

                fetch(`/api/items/${itemId}`)
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('item-details').innerHTML = `
                            <h2>${data.name}</h2>
                            <p>${data.description}</p>
                            <button id="edit-btn">Edit</button>
                            <button id="delete-btn">Delete</button>
                        `;

                        document.getElementById('edit-btn').addEventListener('click', function() {
                            const newName = prompt("Enter new name:", data.name);
                            if (newName) {
                                fetch(`/api/items/${itemId}`, {
                                    method: 'PUT',
                                    headers: {
                                        'Content-Type': 'application/json',
                                    },
                                    body: JSON.stringify({ name: newName }),
                                })
                                .then(response => response.json())
                                .then(updatedData => {
                                    alert('Item updated successfully!');
                                    event.target.textContent = updatedData.name;
                                })
                                .catch(error => console.error('Error updating item:', error));
                            }
                        });

                        document.getElementById('delete-btn').addEventListener('click', function() {
                            if (confirm('Are you sure you want to delete this item?')) {
                                fetch(`/api/items/${itemId}`, {
                                    method: 'DELETE',
                                })
                                .then(() => {
                                    alert('Item deleted successfully!');
                                    event.target.parentElement.remove();
                                    document.getElementById('item-details').innerHTML = '';
                                })
                                .catch(error => console.error('Error deleting item:', error));
                            }
                        });
                    })
                    .catch(error => console.error('Error fetching item details:', error));
            }
        });
    </script>
</body>
</html>
