<!DOCTYPE html>
<html>
<head>
  <title>Books</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
  <h1>Books</h1>
  <ul>
    <% books.forEach(book => { %>
      <li>
        <a href="/detail?id=<%= book._id %>"><%= book.title %></a>
        <a href="/delete?id=<%= book._id %>" onclick="return confirm('Are you sure you want to delete this book?')">Delete</a>
      </li>
    <% }) %>
  </ul>
</body>
</html>
